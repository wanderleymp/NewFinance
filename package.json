{
  "name": "agile-finance",
  "private": true,
  "version": "1.0.4",
  "description": "Sistema de gerenciamento financeiro moderno e intuitivo",
  "author": "Agile Finance Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start:background": "pm2 start npm --name 'newfinance-dev' -- run dev",
    "start:watch": "pm2 start npm --name 'newfinance-dev' --watch -- run dev",
    "stop:background": "pm2 delete newfinance-dev",
    "restart:background": "pm2 restart newfinance-dev",
    "logs:background": "pm2 logs newfinance-dev",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "prepare-release": "npm run lint && npm run test && npm run build",
    "feature": "./scripts/release.sh feature",
    "finish": "./scripts/release.sh finish",
    "release": "./scripts/release.sh release",
    "release:minor": "./scripts/release.sh release minor",
    "release:patch": "./scripts/release.sh release patch",
    "release:build": "./scripts/release.sh build",
    "deploy": "./scripts/deploy.sh deploy",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/inter": "^5.1.0",
    "@fontsource/roboto": "^5.1.0",
    "@hookform/resolvers": "^3.10.0",
    "@mui/icons-material": "6.3.1",
    "@mui/lab": "^6.0.0-beta.22",
    "@mui/material": "6.3.1",
    "@mui/x-data-grid": "^7.23.3",
    "@mui/x-date-pickers": "^7.23.6",
    "@tanstack/react-query": "^5.64.2",
    "@tanstack/react-query-devtools": "^5.64.2",
    "@tanstack/react-table": "^8.20.6",
    "@types/lodash.debounce": "^4.0.9",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "date-fns": "^2.30.0",
    "framer-motion": "^11.15.0",
    "jwt-decode": "^4.0.0",
    "lodash.debounce": "^4.0.8",
    "lucide-react": "^0.473.0",
    "moment-timezone": "^0.5.46",
    "notistack": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-query": "^3.39.3",
    "react-router-dom": "^7.1.0",
    "react-toastify": "^11.0.2",
    "recharts": "^2.15.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.3"
  }
}
